<%= form_for [:admin, @user], :html => { :class => "form-horizontal" } do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :email, "Эл.адрес", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :email, :placeholder => "Электронный адрес" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :username, "Имя пользователя", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :username, :placeholder => "Имя пользователя" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, "Пароль", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :password, :placeholder => "Пароль" %>
    </div>
  </div> 
  
  <div class="control-group">
    <%= f.label :password_confirmation, "Подтверждение пароля", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :password_confirmation, :placeholder => "Подтверждение пароля" %>
    </div>
  </div> 
  
  <div class="form-actions">
    <%= link_to "Отменить", admin_users_path, :class => 'btn' %>
    или 
    <%= submit_tag("Сохранить", :class => 'btn btn-primary')  %>
  </div>
<% end %>
